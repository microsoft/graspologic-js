{
	"name": "@graspologic/monorepo",
	"version": "0.4.0",
	"private": true,
	"description": "Efficient WebGL-based Graph Data visualization + React Componentry",
	"repository": "https://github.com/microsoft/Graspologic-js",
	"author": "Chris Trevino (chtrevin@microsoft.com)",
	"contributors": [
		"David Tittsworth (datittsw@microsoft.com)",
		"Nathan Evans (naevans@microsoft.com)"
	],
	"license": "MIT",
	"scripts": {
		"preinstall": "npx only-allow yarn",
		"clean_all": "yarn workspaces foreach -pv run clean",
		"build_all": "yarn workspaces foreach -pv run build",
		"bundle_lib_all": "yarn workspaces foreach -pv run bundle_lib",
		"bundle_types_all": "yarn workspaces foreach -pv run bundle_lib",
		"bundle_all": "yarn workspaces foreach -pv run bundle",
		"pipeline": "run-s build_all bundle_lib_all bundle_types_all bundle_all",
		"start_all": "yarn workspaces foreach -pv run start",
		"release_all": "yarn workspaces foreach run npm publish --tolerate-republish --access public",
		"lint": "essex lint --docs",
		"unit_test": "essex test --coverage",
		"prettify": "essex prettify",
		"storybook": "yarn workspaces foreach --exclude \"@graspologic/layout-sandbox\" -piv run start",
		"git_is_clean": "essex git-is-clean",
		"ci": "run-s pipeline lint unit_test git_is_clean"
	},
	"engines": {
		"node": ">= 12",
		"pnpm": ">= 5"
	},
	"devDependencies": {
		"@essex/eslint-config": "^10.0.1",
		"@essex/eslint-plugin": "^10.0.1",
		"@essex/jest-config": "^10.0.2",
		"@essex/prettier-config": "^10.0.0",
		"@essex/scripts": "^11.0.1",
		"@types/enzyme": "^3.10.5",
		"@types/invariant": "^2.2.33",
		"@typescript-eslint/eslint-plugin": "^4.5.0",
		"@typescript-eslint/parser": "^4.5.0",
		"applicationinsights": "^1.8.7",
		"colors": "^1.4.0",
		"dts-bundle": "^0.7.3",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.5",
		"eslint-import-resolver-node": "^0.3.4",
		"husky": "^4.3.0",
		"jest-webgl-canvas-mock": "^0.2.3",
		"lint-staged": "^10.4.2",
		"npm-run-all": "^4.1.5",
		"rollup": "^2.32.1",
		"shx": "^0.3.2",
		"typedoc-plugin-markdown": "^2.4.2",
		"typescript": "4.0.3"
	},
	"resolutions": {
		"@types/vfile-message": "1.0.1",
		"@types/react-native": "npm:@types/react@*"
	},
	"workspaces": [
		"packages/*/*"
	],
	"dependencies": {
		"@yarnpkg/pnpify": "^2.3.3"
	}
}
